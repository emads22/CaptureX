<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10

        Camera:
            id: camera
            size_hint_y: 0.8
            resolution: (640, 480)
            play: False
        Button:
            id: start_btn
            size_hint_y: 0.1
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
        Button:
            id: capture_btn
            size_hint_y: 0.1
            text: 'Capture'
            on_press: root.capture()

<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10

        Image:
            id: image
            size_hint_y: 0.65
            source: 'assets/images/not_available.jpg'
        Button:
            id: create_link_btn
            size_hint_y: 0.1
            text: 'Create'
            on_press: root.create_link()
        Label:
            id: link_label
            size_hint_y: 0.05
            text: ''
        Button:
            id: copy_btn
            size_hint_y: 0.1
            text: 'Copy'
            on_press: root.copy()
        Button:
            id: open_btn
            size_hint_y: 0.1
            text: 'Open'
            on_press: root.open()


<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'

    ImageScreen:
        id: image_screen
        name: 'image_screen'
