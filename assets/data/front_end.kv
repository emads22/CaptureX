<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10

        Image:
            id: img_stream
            size_hint_y: 0.8
        Button:
            id: start_btn
            size_hint_y: 0.1
            text: 'Start Camera'
            on_press: root.start()
        Button:
            id: capture_btn
            size_hint_y: 0.1
            text: 'Capture'
            on_press: root.capture()

<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10

        Image:
            id: image
            size_hint_y: 0.6
            source: 'assets/images/not_available.jpg'
        Button:
            id: create_link_btn
            size_hint_y: 0.1
            text: 'Create Shareable Link'
            on_press: root.create_link()
        Label:
            id: link_label
            size_hint_y: 0.1
            text: ''
        GridLayout:
            cols: 2
            padding: 10
            spacing: 10

            Button:
                id: copy_btn
                size_hint_x: 0.5
                size_hint_y: 0.1
                text: 'Copy Link'
                on_press: root.copy_link()
            Button:
                id: open_btn
                size_hint_x: 0.5
                size_hint_y: 0.1
                text: 'Open Link'
                on_press: root.open()


<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'

    ImageScreen:
        id: image_screen
        name: 'image_screen'
