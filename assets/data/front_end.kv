<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10

        Image:
            id: image
            size_hint_y: 0.8
            source: 'assets/images/not_available.jpg'
        Button:
            id: start_btn
            size_hint_y: 0.1
            text: 'Start'
            on_press: root.start()
        Button:
            id: capture_btn
            size_hint_y: 0.1
            text: 'Capture'
            on_press: root.capture()

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'

    ImageScreen:
        id: image_screen
        name: 'image_screen'
